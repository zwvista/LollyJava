<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
 
<struts>

 <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.custom.i18n.resources" value="global" />
    
 
 <package name="default" extends="struts-default">
    <interceptors>
  <interceptor-stack name="appDefaultStack">
    <interceptor-ref name="defaultStack">
     <param name="exception.logEnabled">true</param>
     <param name="exception.logLevel">ERROR</param>
    </interceptor-ref>
 </interceptor-stack>
</interceptors>
 
<default-interceptor-ref name="appDefaultStack" />
	<action name="index">
	    <result>/index.jsp</result>
	</action>
	<action name="lolly" class="com.zwstudio.lolly.web.struts2.LollyAction">
		<result>/lolly.jsp</result>
	</action>
	<action name="lolly2" class="com.zwstudio.lolly.web.struts2.LollyAction">
		<result type="velocity">/lolly2.jsp</result>
	</action>
	<action name="lolly3" class="com.zwstudio.lolly.web.struts2.LollyAction">
		<result type="freemarker">/lolly3.jsp</result>
	</action>
</package>

<package name="default2" namespace="/" extends="json-default">

	<interceptors>
		<interceptor-stack name="jsonStack">
    <interceptor-ref name="defaultStack">
     <param name="exception.logEnabled">true</param>
     <param name="exception.logLevel">ERROR</param>
    </interceptor-ref>
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
		</interceptor-stack>
	</interceptors>
	<default-interceptor-ref name="jsonStack" />

	<action name="dictList" class="com.zwstudio.lolly.web.struts2.LollyAction" method="writeDictList">
		<result type="json">/lolly.jsp</result>
	</action>
	<action name="dictUrl" class="com.zwstudio.lolly.web.struts2.LollyAction" method="writeDictUrl">
		<result type="json">/lolly.jsp</result>
	</action>
	<action name="dictList2" class="com.zwstudio.lolly.web.struts2.LollyAction" method="writeDictList">
		<result type="json">/lolly2.jsp</result>
	</action>
	<action name="dictUrl2" class="com.zwstudio.lolly.web.struts2.LollyAction" method="writeDictUrl">
		<result type="json">/lolly2.jsp</result>
	</action>
	<action name="dictList3" class="com.zwstudio.lolly.web.struts2.LollyAction" method="writeDictList">
		<result type="json">/lolly3.jsp</result>
	</action>
	<action name="dictUrl3" class="com.zwstudio.lolly.web.struts2.LollyAction" method="writeDictUrl">
		<result type="json">/lolly3.jsp</result>
	</action>
</package>
 
</struts>